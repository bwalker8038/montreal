{
  "manifest_version": 2,

  "name": "Montreal Build Monitor",
  "description": "This extension will kick off build a .NET application from the browser.",
  "version": "0.5",
  "permissions": [
    "http://localhost/*"
  ],
 "content_security_policy": "default-src 'none'; script-src 'self' http://localhost",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  } 
}